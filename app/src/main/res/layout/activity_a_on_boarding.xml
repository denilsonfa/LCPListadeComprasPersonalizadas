<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".A_A_OnBoardingActivity"
    android:background="@color/textBranco01">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/viewPagerCountDots"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cor_gradient_azul2"/>

        <LinearLayout
            android:id="@+id/viewPagerCountDots"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_above="@+id/ll_footer"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/btn_get_started"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/stl_btn_color"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/bebasneue"
                android:text="@string/inicio"
                android:textAllCaps="false"
                android:textColor="@color/textBranco01"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

