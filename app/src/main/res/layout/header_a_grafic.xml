<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/cor_gradient_azul2"
    tools:context=".A_M05_ProductGrafic">

    <LinearLayout
        android:id="@+id/option01"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_head_branco02"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name1"
            android:padding="10dp"
            app:srcCompat="@drawable/lg_lcp_branco" />

        <TextView
            android:id="@+id/name_pt01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="@string/name_pt01"
            android:textAlignment="center"
            android:textColor="@color/textBranco01"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/name_pt02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebasneue"
            android:text="@string/name_pt02"
            android:textAlignment="center"
            android:textColor="@color/textBranco02"
            android:textSize="18sp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option02"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_head_branco02"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textColor="@color/textBranco01_t"
                android:background="@color/textBranco05">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/app_name1"
                    android:padding="10dp"
                    app:srcCompat="@drawable/lg_lcp_branco"
                    app:tint="@color/textBranco01_t" />

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/textBranco02_t"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue"
                        android:text="@string/name_pt01"
                        android:textAlignment="textStart"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue"
                        android:text="@string/name_pt02"
                        android:textAlignment="textStart"
                        android:textColor="@color/textBranco01_t"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue"
                    android:textAlignment="center"
                    android:paddingEnd="5dp"
                    android:paddingStart="0dp"
                    android:text="@string/header_title01"
                    android:textColor="@color/textBranco02_t"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nomeListITEM05_header01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue"
                    android:textAlignment="center"
                    android:paddingEnd="5dp"
                    android:paddingStart="0dp"
                    android:text="@string/listname"
                    android:textColor="@color/textBranco01_t"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/valorListITEM05_header01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebasneue"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:text="@string/num6"
                        android:textColor="@color/textBranco01_t"
                        android:textSize="40sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option03"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_head_branco02"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="22dp"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/app_name2"
                android:textAlignment="center"
                android:fontFamily="@font/bebasneue"
                android:textColor="@color/textBranco01_t"
                android:background="@color/textBranco05"
                android:textSize="14sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/no_data_ListGrafico_l"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bebasneue"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/grafic_vazia_l"
                android:textColor="@color/textBranco15"
                android:textSize="16sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/porcent100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:text="@string/num6"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="10sp"
                        android:gravity="top"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        tools:ignore="RtlCompat,SmallSp" />

                    <TextView
                        android:id="@+id/porcent80"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:text="@string/num2"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="10sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        tools:ignore="RtlCompat,SmallSp" />

                    <TextView
                        android:id="@+id/porcent50"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:text="@string/num2"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="10sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        tools:ignore="RtlCompat,SmallSp" />


                    <TextView
                        android:id="@+id/porcent20"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:text="@string/num2"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="10sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        tools:ignore="RtlCompat,SmallSp" />

                    <TextView
                        android:id="@+id/porcent0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_light"
                        android:textStyle="bold"
                        android:textAlignment="textEnd"
                        android:text="@string/num2"
                        android:textColor="@color/textBranco02_t"
                        android:textSize="10sp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="bottom"
                        tools:ignore="RtlCompat,SmallSp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/textBranco05"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/readProductListGrafico_l"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="@drawable/stl_tire_list_grafic"/>

                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:background="@color/textBranco05"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>