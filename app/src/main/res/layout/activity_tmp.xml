<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tmp"
    android:background="@drawable/cor_gradient_branco">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sltProduct03_editObs"
            android:fontFamily="@font/bebasneue"
            android:textAlignment="center"
            android:textSize="20sp"
            android:paddingTop="35dp"
            android:paddingBottom="20dp"
            android:background="@color/textAzul03"
            android:textColor="@color/textBranco01"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/readProductListConsultMult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible"/>

<!--        <include-->
<!--            layout="@layout/model"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1" />-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/prevBtn"
                android:text="@string/anterio"
                android:background="@drawable/stl_btn_color"
                android:textColor="@color/textBranco01"
                android:fontFamily="@font/raleway_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="UselessLeaf" />

            <Button
                android:id="@+id/nextBn"
                android:text="@string/proximo"
                android:background="@drawable/stl_btn_color"
                android:textColor="@color/textBranco01"
                android:fontFamily="@font/raleway_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:padding="10dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>